{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "./dist",
        "baseUrl": "./src",
        "incremental": true,
        "preserveWatchOutput": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
